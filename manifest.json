{
    "name": "Design Good",
    "description": "pop up when clicked",
    "version": "0.0",
    "manifest_version": 2,
    "permissions": ["storage"],
    "background": {
        "scripts": [ "background.js" ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "helloWorldExtension.html",
        "default_icon": "Goodies.png"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+G",
                "mac": "MacCtrl+Shift+G"
            },
            "description": "shortcut for The Goods"
        }
    }
}
